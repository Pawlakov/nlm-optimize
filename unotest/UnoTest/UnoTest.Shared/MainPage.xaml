<Page
    x:Class="UnoTest.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:local="using:UnoTest"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
		  <StackPanel Orientation="Vertical">
        <NavigationView>
          <NavigationView.MenuItems>
            <NavigationViewItem Name="Obraz oryginalny">
              <TextBlock>The TabView control has multiple uses.</TextBlock>
            </NavigationViewItem>
            <NavigationViewItem Name="Obraz zaszumiony">
              <TextBlock>It has a lot of versitility out of the box for different scenarios.</TextBlock>
            </NavigationViewItem>
            <NavigationViewItem Name="Obraz filtrowany">
              <TextBlock>You can enable drag-and-drop and reorder the tabs too.</TextBlock>
            </NavigationViewItem>
          </NavigationView.MenuItems>
        </NavigationView>
      </StackPanel>
    </Grid>
</Page>
